<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define"
         xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">
  <j:set var="folder" value="${it.getItem()}"/>
  <!-- TODO: l:icon does not work for Folders-->
  <img src="${folder.iconColor.getImageOf('16x16')}" width="16" height="16" 
       alt="${folder.iconColor.description}" tooltip="${folder.iconColor.description}"/>

  <a href="${h.getRelativeLinkTo(folder)}" class="model-link"><l:breakable value="${folder.fullDisplayName}"/></a>
</j:jelly>
